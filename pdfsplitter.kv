#:kivy 2.0.0

<Check@BoxLayout>:
    text: ''
    color: 0,0,0,1
    size_hint_y: None
    height: dp(48)
    active: False

    MDCheckbox:
        active: True
        size_hint: None, None
        size: "48dp", "48dp"
        group: 'group'
        active: root.active
        on_active: root.active = self.active
    
    Label:
        text: root.text
        color: root.color
        size_hint_x: None
        width: self.texture_size[0]
        text_size: None, None




MDBoxLayout:
    orientation: 'vertical'
    padding: (10)

    MDRelativeLayout:
        MDRoundFlatIconButton:
            text: "Seleccionar PDF"
            icon: "folder"
            pos_hint: {'center_x': .5, 'center_y': 0.5}
            on_release: app.file_manager_open() 

    Check:
        id: todo
        text: "Separar todas"
        active: True

    Check:
        id: pares
        text: "Separar en pares"
        active: False

    Check:
        id: rango
        text: "Rango"
        active: False

    MDTextField:
        id: rango_value
        size_hint: .9, None
        pos_hint: {'center_x': 0.5}
        height: "15dp"
        helper_text_mode: "on_focus"
        helper_text: "(1-2), (1,5,7), (3)"
        readonly: not rango.active
        line_color_normal: (1, 0, 0, 1) if not rango.active else (0, .8, .6, 1)
        
    MDLabel:
        text: ""

    MDFillRoundFlatButton:
        text: "Generar"
        pos_hint: {'center_x': 0.5}
        on_release: app.split_pdf()